{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "esa-search",
  "title": "esa Search",
  "description": "Search for posts by your team's esa. No official esa.io product.",
  "icon": "icon.png",
  "author": "kawamataryo",
  "categories": [
    "Productivity",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "searchPost",
      "title": "Search Post",
      "subtitle": "esa",
      "description": "Search for esa post.",
      "mode": "view"
    },
    {
      "name": "createPost",
      "title": "Create Post",
      "subtitle": "esa",
      "description": "Create post for esa.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "title": "Team Name",
      "name": "primaryTeamName",
      "description": "Your esa team name",
      "type": "textfield",
      "placeholder": "esa",
      "required": true
    },
    {
      "title": "Token",
      "name": "primaryToken",
      "description": "Your esa access token",
      "type": "password",
      "placeholder": "xxx",
      "required": true
    },
    {
      "title": "Secondary Team Name",
      "name": "secondaryTeamName",
      "description": "Your esa team name",
      "type": "textfield",
      "placeholder": "esa",
      "required": false
    },
    {
      "title": "Secondary Token",
      "name": "secondaryToken",
      "description": "Your esa access token",
      "type": "password",
      "placeholder": "xxx",
      "required": false
    },
    {
      "title": "Detail Screen",
      "name": "isShowDetail",
      "description": "Show detail screen in initial view",
      "type": "dropdown",
      "default": "false",
      "data": [
        {
          "value": "true",
          "title": "Yes"
        },
        {
          "value": "false",
          "title": "No"
        }
      ],
      "required": false
    },
    {
      "title": "Per Page",
      "name": "perPage",
      "description": "How many posts to retrieve at once",
      "type": "dropdown",
      "default": "20",
      "data": [
        {
          "value": "20",
          "title": "20"
        },
        {
          "value": "30",
          "title": "30"
        },
        {
          "value": "40",
          "title": "40"
        },
        {
          "value": "50",
          "title": "50"
        },
        {
          "value": "60",
          "title": "60"
        },
        {
          "value": "70",
          "title": "70"
        },
        {
          "value": "80",
          "title": "80"
        },
        {
          "value": "90",
          "title": "90"
        },
        {
          "value": "100",
          "title": "100"
        }
      ],
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.3",
    "@raycast/utils": "^1.1.0",
    "@suin/esa-api": "^4.0.0",
    "dayjs": "^1.11.5",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
